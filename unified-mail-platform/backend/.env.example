# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://mailuser:mailpass@localhost:5432/unified_mail
DATABASE_POOL_SIZE=20

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# HashiCorp Vault
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=dev-root-token
VAULT_NAMESPACE=

# MinIO/S3
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=unified-mail
S3_REGION=us-east-1
S3_USE_SSL=false

# Elasticsearch
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme
ELASTICSEARCH_INDEX=messages

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_ISSUER=unified-mail-platform
JWT_AUDIENCE=unified-mail-api
JWT_EXPIRES_IN=24h

# OIDC/OAuth Configuration (for analyst authentication)
OIDC_ISSUER_URL=https://your-idp.com
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret
OIDC_CALLBACK_URL=http://localhost:3000/auth/callback

# Gmail OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/gmail/callback

# Microsoft OAuth
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=common
AZURE_REDIRECT_URI=http://localhost:3000/auth/microsoft/callback

# Worker Configuration
SYNC_WORKER_CONCURRENCY=10
INDEX_WORKER_CONCURRENCY=5
SEND_WORKER_CONCURRENCY=3
SYNC_INTERVAL_MINUTES=5

# Rate Limiting
GMAIL_REQUESTS_PER_SECOND=250
MICROSOFT_REQUESTS_PER_10MIN=10000
IMAP_CONCURRENT_CONNECTIONS=5

# Security
BCRYPT_ROUNDS=12
ENABLE_CORS=true
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Data Retention
MESSAGE_RETENTION_DAYS=90
AUDIT_LOG_RETENTION_DAYS=365
